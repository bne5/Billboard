<h1><%= @album.id ? 'Edit Album' : 'Create Album' %></h1>
<hr />
<%= form_with(model: [@artist, @album], local: true, class: "ui form") do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :genre %>
  <%= f.text_field :genre, required: true %>
  <br />
  <%= f.label :year %>
  <%= f.text_field :year, required: true %>
  <br />
  <br />
  <%= f.submit nil, class: "ui button" %>
<% end %>